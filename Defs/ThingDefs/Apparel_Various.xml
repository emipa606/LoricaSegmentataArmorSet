      <Mass>10</Mass>
      <ArmorRating_Sharp>0.53</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.24</ArmorRating_Blunt>
      <ArmorRating_Heat>0.32</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <EquipDelay>9</EquipDelay>
