<Defs>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_SegmentataHelmet</defName>
    <label>Segmentata Helmet</label>
    <description>This archaic helmet is easy to manufacture, socially impressive, protects up to the neck, and provides rudimentary insulation against the cold, but it does fall short of advanced helmets in terms of raw protection.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/SegmentataHelm/SegmentataHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MaxHitPoints>110</MaxHitPoints>
      <Mass>2.2</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.54</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.24</ArmorRating_Blunt>
      <ArmorRating_Heat>0.32</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <Cloth>10</Cloth>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/SegmentataHelm/SegmentataHelm</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
